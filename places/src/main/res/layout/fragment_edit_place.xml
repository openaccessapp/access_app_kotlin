<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/goBack4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/ic_keyboard_backspace_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/tree_top2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tree_top2" />

    <ImageView
        android:id="@+id/tree_top2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tree_top2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/add_place_header2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Edit Place"
                android:gravity="center"
                android:textColor="@color/text_color_dark"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollViewPlace" />

            <ImageView
                android:id="@+id/imagePlaceholder2"
                android:layout_width="255dp"
                android:layout_height="255dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_textview"
                android:backgroundTint="@color/grey"
                android:src="@mipmap/ic_launcher"
                android:foregroundGravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadImageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_medium"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="Change Image"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:cornerRadius="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imagePlaceholder" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="33dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Name of place"
                android:textColor="@color/text_grey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/placeNameEt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_rounded"
                android:hint="Edit name of place"
                android:inputType="text"
                android:nextFocusDown="@+id/LocEt"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="33dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Location"
                android:textColor="@color/text_grey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/locEt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_rounded"
                android:drawableStart="@drawable/ic_near_me_24px"
                android:drawablePadding="10dp"
                android:hint="Edit location"
                android:inputType="text"
                android:nextFocusDown="@+id/describeEt"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="33dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Description"
                android:textColor="@color/text_grey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/describeEt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_rounded"
                android:gravity="start"
                android:hint="Edit place description"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="6"
                android:minLines="6"
                android:nextFocusDown="@+id/urlEt"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:scrollbars="vertical"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="33dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Website URL"
                android:textColor="@color/text_grey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/urlEt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_rounded"
                android:gravity="start"
                android:hint="URL..."
                android:inputType="textUri"
                android:nextFocusDown="@+id/next_button"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_button3"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:letterSpacing="0.0"
                android:padding="21dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="30dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>