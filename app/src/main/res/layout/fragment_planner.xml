<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/tree_top"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/openProfile"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="35dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="@id/tree_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tree_top" />

    <TextView
        android:id="@+id/MonthTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/rubik_bold"
        android:text="Upcoming Visits"
        android:textColor="@color/text_color_dark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tree_top" />

    <LinearLayout
        android:id="@+id/calendarHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/MonthTv">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_calendar_alt"
            android:tint="@color/text_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/rubik_bold"
            android:text="MON"
            android:textColor="@color/text_color_dark"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/rubik_bold"
            android:text="27th May"
            android:textColor="@color/text_color_dark"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_history_museum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hourFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/rubik_medium"
                android:text="10:00"
                android:textColor="@color/text_color_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hourTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="26dp"
                android:fontFamily="@font/rubik_medium"
                android:text="11:00"
                android:textColor="@color/text_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hourFrom" />

            <View
                android:id="@+id/separatorPlanner"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                android:background="@color/grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/hourFrom"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/priority_text"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:enabled="false"
                android:fontFamily="@font/rubik_medium"
                android:letterSpacing="0.0"
                android:minWidth="0dp"
                android:minHeight="40dp"
                android:stateListAnimator="@null"
                android:text="Priority"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="@color/colorAccent"
                app:cornerRadius="6dp"
                app:layout_constraintStart_toEndOf="@id/separatorPlanner"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/rubik_bold"
                android:text="History Museum"
                android:textColor="@color/text_color_dark"
                android:textSize="16sp"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="@id/priority_text"
                app:layout_constraintStart_toEndOf="@id/priority_text"
                app:layout_constraintTop_toTopOf="@id/priority_text" />

            <ImageView
                android:id="@+id/person"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/ic_person_outline_24px"
                app:layout_constraintStart_toEndOf="@id/separatorPlanner"
                app:layout_constraintTop_toBottomOf="@id/priority_text" />

            <TextView
                android:id="@+id/visitorsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/rubik_medium"
                android:text="Visitors"
                android:textColor="@color/text_grey"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/person"
                app:layout_constraintStart_toEndOf="@id/person"
                app:layout_constraintTop_toTopOf="@id/person" />

            <TextView
                android:id="@+id/personCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/rubik_bold"
                android:text="1"
                android:textColor="@color/text_color_dark"
                app:layout_constraintBottom_toBottomOf="@id/visitorsTv"
                app:layout_constraintStart_toEndOf="@id/visitorsTv"
                app:layout_constraintTop_toTopOf="@id/visitorsTv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/rubik_medium"
                android:text="20/100"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/priority_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/priority_text" />

            <ImageView
                android:id="@+id/bell_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="43dp"
                android:src="@drawable/ic_bell"
                app:layout_constraintBottom_toBottomOf="@id/person"
                app:layout_constraintStart_toEndOf="@id/personCountTv"
                app:layout_constraintTop_toTopOf="@id/person" />

            <TextView
                android:id="@+id/reminderTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/rubik_medium"
                android:text="Reminder"
                android:textColor="@color/text_grey"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/person"
                app:layout_constraintStart_toEndOf="@id/bell_icon"
                app:layout_constraintTop_toTopOf="@id/person" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:thumb="@drawable/custom_thumb"
                app:layout_constraintBottom_toBottomOf="@id/reminderTv"
                app:layout_constraintStart_toEndOf="@id/reminderTv"
                app:layout_constraintTop_toTopOf="@id/reminderTv"
                app:track="@drawable/custom_track" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_started_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/rubik_medium"
        android:letterSpacing="0.0"
        android:padding="21dp"
        android:text="Plan Visit"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>